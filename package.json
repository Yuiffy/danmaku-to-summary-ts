{
  "name": "danmaku-to-summary-ts",
  "version": "0.2.0",
  "private": true,
  "description": "自动处理直播录播文件，生成AI总结的工具",
  "main": "dist/app/main.js",
  "types": "dist/app/main.d.ts",
  "scripts": {
    "dev": "node dist/app/main.js --port 12522 --host 0.0.0.0",
    "build": "tsc --project tsconfig.build.json",
    "dev:next": "next dev",
    "build:next": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "build:ts": "tsc --project tsconfig.build.json --noEmitOnError false || exit 0",
    "build:all": "npm run build:ts && npm run build",
    "dev:ts": "tsc --project tsconfig.build.json --watch",
    "clean": "rimraf dist coverage",
    "prebuild": "npm run clean",
    "type-check": "tsc --noEmit",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:all": "npm run test:unit && npm run test:integration",
    "webhook": "node dist/app/main.js",
    "webhook:dev": "node dist/app/main.js --port 12522 --host 0.0.0.0",
    "webhook:prod": "node dist/app/main.js --port 12521 --host 0.0.0.0",
    "process": "node dist/app/main.js process",
    "batch": "node dist/app/main.js batch",
    "status": "node dist/app/main.js status",
    "help": "node dist/app/main.js help",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:start:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs danmaku-webhook",
    "pm2:status": "pm2 status danmaku-webhook",
    "pm2:list": "pm2 list",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "pm2:monitor": "pm2 monit",
    "pm2:flush": "pm2 flush",
    "pm2:kill": "pm2 kill",
    "restart:webhook": "npm run pm2:restart"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/multer": "^2.0.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "fs-extra": "^11.2.0",
    "https-proxy-agent": "^7.0.6",
    "inversify": "^6.0.2",
    "joi": "^17.12.0",
    "moment": "^2.30.1",
    "multer": "^2.0.2",
    "next": "14.2.15",
    "node-fetch": "^2.7.0",
    "react": "^18",
    "react-dom": "^18",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/joi": "^17.2.3",
    "@types/node": "^20",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/supertest": "^6.0.2",
    "@types/xml2js": "^0.4.14",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "jest": "^30.2.0",
    "postcss": "^8",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts",
      "!src/**/types.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@tests/(.*)$": "<rootDir>/tests/$1"
    }
  },
  "keywords": [
    "danmaku",
    "summary",
    "ai",
    "automation",
    "webhook",
    "livestream"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": ""
}
